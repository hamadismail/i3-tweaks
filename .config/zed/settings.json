// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_family": "Monaco",
  "ui_font_size": 16,
  "buffer_font_family": "Monaco",
  "buffer_font_size": 16,
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "relative_line_numbers": true,
  "current_line_highlight": "all",
  "cursor_shape": "block",
  "cursor_blink": true,
  "theme": {
    "mode": "system",
    "light": "Github Dark Dimmed",
    "dark": "Github Dark Dimmed"
  },
  "scrollbar": {
    "show": "never"
  },
  "project_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "gutter": {
    "line_numbers": false
  },
  "terminal": {
    "font_family": "Monaco",
    "font_size": 14,
    "dock": "bottom",
    "copy_on_select": true,
    "scrollbar": {
      "show": null
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "experimental.theme_overrides": {
    "editor.background": "",
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  }
}
